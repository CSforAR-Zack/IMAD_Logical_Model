<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IMAD_Logical_Model.MainPage">
			 
    <ScrollView>
        <VerticalStackLayout 
            Spacing="25" 
            Padding="30,0" 
            VerticalOptions="Center">

            <HorizontalStackLayout Spacing="10">
                <Button x:Name="leftButton" BackgroundColor="Yellow" />
                <Picker x:Name="operatorPicker" 
                        Title="Select Operation">
                    <Picker.Items>
                        <x:String>AND</x:String>
                        <x:String>OR</x:String>
                        <x:String>XOR</x:String>
                    </Picker.Items>
                </Picker>
                <Button x:Name="rightButton" BackgroundColor="Yellow" />
            </HorizontalStackLayout>
            <Label>

        </VerticalStackLayout>
    </ScrollView>
 
</ContentPage>
